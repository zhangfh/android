<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    android:fadingEdge="vertical">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lst.burns.scratch.MainActivity">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/customtheme"
        android:text="Custom Theme-Using Code"/>
    <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/customtheme2"
    android:layout_below="@id/customtheme"
    android:text="Custom Theme-Using style in manifest"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addtoolbox"
        android:layout_below="@id/customtheme2"
        android:text="add Custom Toolbox"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/adddrawer"
        android:layout_below="@id/addtoolbox"
        android:text="add Drawer Layout"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addcardview"
        android:layout_below="@id/adddrawer"
        android:text="add Card View"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addfragment"
        android:layout_below="@id/addcardview"
        android:text="add Fragment View"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newactivity"
        android:layout_below="@id/addfragment"
        android:text="create activity in different process"/>
    <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/usecoordinatory"
    android:layout_below="@id/newactivity"
    android:text="use coordinatory"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/usebaseactivity"
        android:layout_below="@id/usecoordinatory"
        android:text="use base activity"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/usenotification"
        android:layout_below="@id/usebaseactivity"
        android:text="use notification"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/starthttpserver"
        android:layout_below="@id/usenotification"
        android:text="start http server"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/servicetest"
        android:layout_below="@id/starthttpserver"
        android:text="android Server Test"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addbasefragment"
        android:layout_below="@id/servicetest"
        android:text="add Base Fragment"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sendextratoactivity"
        android:layout_below="@id/addbasefragment"
        android:text="Send Message Between Activity"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_listview"
        android:layout_below="@id/sendextratoactivity"
        android:text="Add List View"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_animation"
        android:layout_below="@id/add_listview"
        android:text="Add Animation "/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_gridview"
        android:layout_below="@id/add_animation"
        android:text="Grid View "/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/counter_activity"
        android:layout_below="@id/add_gridview"
        android:text="Add Counter Activity  "/>

    <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/log_activity"
    android:layout_below="@id/counter_activity"
    android:text="display/write log "/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/handler_thread"
        android:layout_below="@id/log_activity"
        android:text="Handler Thread"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycler_view"
        android:layout_below="@id/handler_thread"
        android:text="Recycler View"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/post_office"
        android:layout_below="@id/recycler_view"
        android:text="Post Office"/>
</RelativeLayout>
</ScrollView>